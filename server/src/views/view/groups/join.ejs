<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
        <link rel="stylesheet" type="text/css" href="../../../../css/index.css">
    </head>
    <body>
        <main>
            <% include ../../partials/pageHeader %>
            <section class="CenterView">
                <form action="/groups/join" class="Form" enctype="application/x-www-form-urlencoded" method="POST">
                    <fieldset class="Form__root">
                        <legend class="PageSubTitle">Join a group</legend>
                        <label class="Field">
                            <span class="Field__title">
                                Group
                            </span>
                            <div class="Field__content">
                                <select name="groupId" class="Field__input Input" required>
                                    <option value="" disabled selected>
                                        Select a group
                                    </option>
                                    <% groups.forEach(group => { %>
                                        <option value="<%= group._id %>">
                                            <%= group.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                        </label>

                        <div class="JS_DYNAMIC_HTML Field"></div>

                        <button type="submit" class="Button Button--action Form__submit-button">
                            Join
                        </button>
                    </fieldset>
                </form>
            </section>
        </main>
        <script src="../../../../scripts/groups/join.js"></script>
        <% include ../../partials/errorScript %>
    </body>
</html>