<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
        <link rel="stylesheet" type="text/css" href="../../../../css/index.css">
    </head>
    <body>
        <main>
            <% include ../../partials/pageHeader %>
            <section class="CenterView">
                <h2 class="PageSubTitle">
                    <%= groupName %> (<%= cryptoCurrency %>)
                </h2>
                <table class="Table">
                    <thead class="Table__head">
                        <tr class="Table__row">
                            <th class="Table__heading">
                                Participant name
                            </th>
                            <th class="Table__heading">
                                Bet
                            </th>
                            <th class="Table__heading">
                                Effort
                            </th>
                            <th class="Table__heading">
                                Amount of points
                            </th>
                            <th class="Table__heading">
                                Hypothetical gain/loss
                            </th>
                        </tr>
                    </thead>
                    <tbody class="Table__body">
                        <% groupParticipants.forEach(participant => { %>
                            <tr class="Table__row">
                                <td class="Table__cell">
                                    <%= participant.username %>
                                </td>
                                <td class="Table__cell" data-participant-id="<%= participant.participant_id %>">
                                    <% if (participant.user_id === currentUserId) { %>
                                        <form
                                            action="groups/<%= groupId %>/change-bet/<%= participant.participant_id %>"
                                            class="Form"
                                            data-participant-id="<%= participant.participant_id %>"
                                        >
                                            <select name="myBet" class="Input Input--small">
                                                <% if (participant.bet !== 'HIGH' && participant.bet !== 'LOW') { %>
                                                    <option value="" disabled selected>
                                                        Select
                                                    </option>
                                                <% } else { %>
                                                    <option value="" disabled>
                                                        Select
                                                    </option>
                                                <% } %>
                                                <% if (participant.bet === 'HIGH') { %>
                                                    <option value="HIGH" selected>
                                                        High
                                                    </option>
                                                <% } else { %>
                                                    <option value="HIGH">
                                                        High
                                                    </option>
                                                <% } %>
                                                <% if (participant.bet === 'LOW') { %>
                                                    <option value="LOW" selected>
                                                        Low
                                                    </option>
                                                <% } else { %>
                                                    <option value="LOW">
                                                        Low
                                                    </option>
                                                <% } %>
                                            </select>
                                        </form>
                                    <% } else { %>
                                        <%= participant.bet ? participant.bet === 'HIGH' ? 'High' : 'Low' : 'No bet placed yet' %>
                                    <% } %>
                                </td>
                                <td class="Table__cell">
                                    <% if (participant.user_id === currentUserId) { %>
                                        <form
                                            action="groups/<%= groupId %>/change-effort/<%= participant.participant_id %>"
                                            class="Form"
                                            data-participant-id="<%= participant.participant_id %>"
                                        >
                                            <input
                                                type="number"
                                                min="1"
                                                max="1000"
                                                step="1"
                                                class="Input Input--small"
                                                placeholder="â‚¬100"
                                            >
                                        </form>
                                    <% } %>
                                </td>
                                <td class="Table__cell">
                                    <%= participant.score %>
                                </td>
                                <td class="Table__cell">
                                    <%= participant.hypothetical_gain %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </section>
        </main>
        <script src="../../../../scripts/groups/detail.js"></script>
    </body>
</html>