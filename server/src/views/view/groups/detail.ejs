<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/head %>
        <link rel="stylesheet" type="text/css" href="../../../../css/index.css">
    </head>
    <body>
        <main>
            <% include ../../partials/pageHeader %>
            <section class="CenterView">
                <h2 class="PageSubTitle">
                    Group name (CryptoCurrency)
                </h2>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Participant name
                            </th>
                            <th>
                                Current bet
                            </th>
                            <th>
                                Amount of points
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% groupParticipants.forEach(participant => { %>
                            <tr>
                                <td>
                                    <%= participant.username %>
                                </td>
                                <td>
                                    <% if (participant.user_id === currentUserId) { %>
                                        <form action="#" class="Form">
                                            <select name="myBet" class="Input Input--small Form__input">
                                                <% if (participant.bet !== 'HIGH' && participant.bet !== 'LOW') { %>
                                                    <option value="" disabled selected>
                                                        Select a bet
                                                    </option>
                                                <% } else { %>
                                                    <option value="" disabled>
                                                        Select a bet
                                                    </option>
                                                <% } %>
                                                <% if (participant.bet === 'HIGH') { %>
                                                    <option value="HIGH" selected>
                                                        High
                                                    </option>
                                                <% } else { %>
                                                    <option value="HIGH">
                                                        High
                                                    </option>
                                                <% } %>
                                                <% if (participant.bet === 'LOW') { %>
                                                    <option value="LOW" selected>
                                                        Low
                                                    </option>
                                                <% } else { %>
                                                    <option value="LOW">
                                                        Low
                                                    </option>
                                                <% } %>
                                            </select>
                                        </form>
                                    <% } else { %>
                                        <%= participant.bet %>
                                    <% } %>
                                </td>
                                <td>
                                    <%= participant.score %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </section>
        </main>
    </body>
</html>